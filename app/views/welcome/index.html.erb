<% @header_title="SimpleFormSite" %>

<%= javascript_tag do %>
  $(function() {
    $('[data-toggle="popover"]').popover();
  })

<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="header text-center"><%= @header_title %></div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>

    <div class="col-xs-12 col-md-6">
      <%= render 'form' %>
    </div>

    <div class="col-md-3"></div>
  </div>

  <div class="row">
    <%= render 'submit_status' %>
  </div>
</div>
